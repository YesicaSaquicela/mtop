<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="         http://java.sun.com/xml/ns/persistence          http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="sgssalud">
    <!-- If you are running in a production environment, add a managed
         data source, the example data source is just for proofs of concept! -->
    <jta-data-source>java:/datasources/sgssalud-ds</jta-data-source>
    <class>edu.sgssalud.model.medicina.FichaMedica</class>
    <class>edu.sgssalud.model.medicina.HistoriaClinica</class>
    <class>edu.sgssalud.model.medicina.SignosVitales</class>
    <class>edu.sgssalud.model.odontologia.Odontograma</class>
    <class>edu.sgssalud.model.odontologia.Diente</class>
    <class>edu.sgssalud.model.odontologia.Tratamiento</class>
    <class>edu.sgssalud.model.servicios.Servicio</class>
    <class>edu.sgssalud.model.labClinico.TipoAnalisis</class>
    <class>edu.sgssalud.model.labClinico.ResultadoExamenLaboratorioClinico</class>
    <class>edu.sgssalud.model.labClinico.PedidoExamenLaboratorio</class>
    <class>edu.sgssalud.model.servicios.Turno</class>
    <class>edu.sgssalud.model.servicios.AgendaMedica</class>
    <properties>
      <!-- Properties for Hibernate -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
